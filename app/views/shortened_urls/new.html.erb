<h1> Shorten Url <h1>

  <% @shortenedurl.errors.each do |attr, msg| %>
  <%= msg %> on <%= attr %>
  <% end %>

  <%= form_for @shortenedurl do |f| %>
  <p><%= f.label :original %> : <%= f.text_field :original %>
  </p>
  <p>
    <%= f.hidden_field :random_id, :value => @shortenedurl.random_id %>
    <%= f.submit "Shorten Url" %>  </p>

  <% end %>

  <p> https://drewsurlshortener.herokuapp.com/shortened_urls/(random_id) <p>
